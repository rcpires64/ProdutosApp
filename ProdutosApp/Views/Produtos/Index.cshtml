@model IEnumerable<ProdutosApp.Models.Produto>

@{
    ViewData["Title"] = "Controle de Produtos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Produtos</h1>
<p>
    <a asp-action="Create" class="btn btn-warning">Novo Produto</a>
</p>

@if (Model.Any())
{
    <div class="row">
        @foreach (var produto in Model)
        {
            <div class="col-md-2 col-sm-4 col-xs-12 produto-card">
                <div class="card">
                    <img class="card-img-top" src="@produto.UrlImagem" alt="@produto.UrlImagem" />
                    <div class="card-body">
                        <h5 class="card-title">@produto.Descricao</h5>
                        <p class="card-text">Quantidade: @produto.Quantidade</p>
                        <p class="card-text">Preço: @produto.Preco</p>
                    </div>
                    <div class="card card-footer">
                        <a href="/Produtos/Edit/@produto.Id" class="btn btn-primary mb-1">Editar</a><br />
                        <a href="/Produtos/Details/@produto.Id" class="btn btn-info mb-1">Detalhes</a><br />
                        <a href="/Produtos/Delete/@produto.Id" class="btn btn-danger mb-1">Apagar</a><br />
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p><b>Nenhum produto cadastrado.</b></p>
}